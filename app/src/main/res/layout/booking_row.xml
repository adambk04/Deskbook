<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:elevation="4dp"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">

    <LinearLayout
        android:id="@+id/list_root2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/BtnBook"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/BtnBookingMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/design_default_color_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_more_vert_gray_24dp"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/BtnShareBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@color/design_default_color_background"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/BtnBookingMenu"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_share_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/design_default_color_background"
                app:layout_constraintBottom_toBottomOf="@+id/TVbookDate4"
                app:layout_constraintEnd_toStartOf="@+id/TVbookDate4"
                app:layout_constraintTop_toTopOf="@+id/TVbookDate4"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_date_range_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="1dp"
                android:background="@color/design_default_color_background"
                app:layout_constraintBottom_toBottomOf="@+id/TVworkspaceName4"
                app:layout_constraintEnd_toStartOf="@+id/TVworkspaceName4"
                app:srcCompat="@drawable/ic_work_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/design_default_color_background"
                app:layout_constraintBottom_toBottomOf="@+id/TVlocation4"
                app:layout_constraintEnd_toStartOf="@+id/TVlocation4"
                app:layout_constraintTop_toTopOf="@+id/TVlocation4"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_location_on_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/IVworkspace4"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TVqueue"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/TVworkspaceName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Desk"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IVworkspace4"
                app:layout_constraintVertical_chainStyle="spread" />

            <TextView
                android:id="@+id/TVlocation4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="East"
                app:layout_constraintBottom_toTopOf="@+id/TVamenity4"
                app:layout_constraintEnd_toEndOf="@+id/TVworkspaceName4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/TVworkspaceName4"
                app:layout_constraintTop_toBottomOf="@+id/TVworkspaceName4"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/TVbookDate4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/6/2020"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/TVbookTime4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/TVbookTime4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="8 - 10"
                app:layout_constraintBottom_toTopOf="@+id/BtnBook"
                app:layout_constraintEnd_toEndOf="@+id/TVbookDate4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/TVbookDate4" />

            <TextView
                android:id="@+id/TVamenity4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="tele "
                app:layout_constraintBottom_toTopOf="@+id/TVbookDate4"
                app:layout_constraintEnd_toEndOf="@+id/TVworkspaceName4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/TVworkspaceName4"
                app:layout_constraintTop_toBottomOf="@+id/TVlocation4" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="Booking"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TVqueue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:text="1 / 2"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/TVuserCapacity4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:text="( 5 Pax )"
                app:layout_constraintBottom_toBottomOf="@+id/TVworkspaceName4"
                app:layout_constraintStart_toEndOf="@+id/TVworkspaceName4"
                app:layout_constraintTop_toTopOf="@+id/TVworkspaceName4" />

            <ImageButton
                android:id="@+id/BtnLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/design_default_color_background"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/BtnShareBooking"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_light_24"
                tools:ignore="VectorDrawableCompat" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
